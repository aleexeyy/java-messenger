<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml" fx:controller="aleexeyy.com.icq.client.ui.controllers.RegistrationController">
    <children>
        <VBox fx:id="formContainer" spacing="15" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <alignment>CENTER</alignment>
            <padding>
                <Insets top="50" bottom="50" left="50" right="50" />
            </padding>

            <TextField fx:id="serverAddressField" text="ws://localhost:7080/" maxWidth="400">
                <style>-fx-background-color: #2c2f33; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888;</style>
            </TextField>

            <TextField fx:id="nicknameField" promptText="Nickname" maxWidth="400">
                <style>-fx-background-color: #2c2f33; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888;</style>
            </TextField>

            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="400">
                <style>-fx-background-color: #2c2f33; -fx-text-fill: #ffffff; -fx-prompt-text-fill: #888888;</style>
            </PasswordField>

            <Button fx:id="registerButton" text="Register" maxWidth="400" onAction="#initialize">
                <style>-fx-background-color: #7289da; -fx-text-fill: white; -fx-font-weight: bold;</style>
            </Button>
        </VBox>
    </children>
    <style>
        -fx-background-color: #23272a;
    </style>
</AnchorPane>